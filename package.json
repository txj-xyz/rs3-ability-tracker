{
  "name": "rs3-ability-tracker",
  "version": "1.1.5",
  "description": "Ability Tracker for RuneScape 3",
  "type": "commonjs",
  "main": "src/index.js",
  "scripts": {
    "test": "node ./tools/generate-abilities-json.js",
    "startdev": "electron-forge start --enable-logging -- dev",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "author": "TXJ + Kurasad",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-dmg": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "electron": "^16.0.7"
  },
  "dependencies": {
    "electron-active-window": "^0.0.6",
    "electron-squirrel-startup": "^1.0.0",
    "lodash.throttle": "^4.1.1",
    "uiohook-napi": "^1.2.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./src/icons/icon",
        "asar": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "iconUrl": "https://raw.githubusercontent.com/txj-xyz/rs3-ability-tracker/totally-not-master/src/icons/icon.ico",
            "setupIcon": "./src/icons/icon.ico",
            "setupExe": "RS3-Ability-Tracker.exe",
            "skipUpdateIcon": true,
            "name": "rs3-ability-tracker"
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "icon": "./src/icons/icon.icns",
            "name": "rs3-ability-tracker",
            "overwrite": true
          }
        }
      ]
    }
  }
}
